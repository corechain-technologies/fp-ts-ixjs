{
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "target": "es5",

        "importHelpers": true,
        "outDir": "./lib",
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "strict": true,
        "noImplicitReturns": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": false,
        "allowJs": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["./src/**/*"]
}
